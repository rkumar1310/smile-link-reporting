{
  "$schema": "./schemas/llm-evaluator.schema.json",
  "version": "2.0.0",
  "enabled": true,
  "model": "claude-sonnet-4-5-20250929",
  "api_key_env": "ANTHROPIC_API_KEY",
  "timeout_ms": 30000,
  "max_retries": 2,
  "temperature": 0.1,
  "thresholds": {
    "block_below": 6,
    "flag_below": 8,
    "dimension_block_below": 4,
    "dimension_flag_below": 6
  },
  "weights": {
    "professional_quality": 0.15,
    "clinical_safety": 0.25,
    "tone_appropriateness": 0.20,
    "personalization": 0.15,
    "patient_autonomy": 0.15,
    "structure_completeness": 0.10
  },
  "skip_conditions": {
    "high_confidence_pass": false,
    "cost_control_sampling": 1.0
  },
  "fallback_on_error": "FLAG"
}
