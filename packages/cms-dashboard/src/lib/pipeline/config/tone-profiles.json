{
  "$schema": "./schemas/tone-profiles.schema.json",
  "version": "1.0.0",
  "default_tone": "TP-01",
  "section_11_override": "TP-06",
  "priority_order": ["TP-04", "TP-05", "TP-02", "TP-03", "TP-06", "TP-01"],
  "profiles": {
    "TP-01": {
      "name": "Neutral-Informative",
      "description": "Default professional tone, balanced and factual",
      "priority": 6,
      "trigger_drivers": {},
      "is_default": true,
      "banned_lexical_set": [
        "you must",
        "you should definitely",
        "the best option is",
        "guaranteed",
        "100%",
        "always",
        "never fails"
      ]
    },
    "TP-02": {
      "name": "Empathic-Neutral",
      "description": "Warm, understanding tone for patients needing reassurance",
      "priority": 3,
      "trigger_drivers": {
        "experience_history": ["negative_history"],
        "expectation_risk": ["high"]
      },
      "banned_lexical_set": [
        "you must",
        "simple procedure",
        "nothing to worry about",
        "easy fix",
        "guaranteed"
      ]
    },
    "TP-03": {
      "name": "Reflective-Contextual",
      "description": "Thoughtful tone for patients who want to understand context",
      "priority": 4,
      "trigger_drivers": {
        "information_depth": ["detailed"],
        "decision_stage": ["exploring"]
      },
      "banned_lexical_set": [
        "just do",
        "simple",
        "obviously",
        "clearly the best"
      ]
    },
    "TP-04": {
      "name": "Stability-Frame",
      "description": "Calming tone for highly anxious patients",
      "priority": 1,
      "trigger_drivers": {
        "anxiety_level": ["severe"]
      },
      "banned_lexical_set": [
        "surgery",
        "operation",
        "invasive",
        "drill",
        "cut",
        "remove",
        "extract",
        "painful",
        "you must",
        "immediately",
        "urgent",
        "complication",
        "risk",
        "failure"
      ]
    },
    "TP-05": {
      "name": "Expectation-Calibration",
      "description": "Balanced tone for managing unrealistic expectations",
      "priority": 2,
      "trigger_drivers": {
        "expectation_risk": ["high"],
        "aesthetic_tolerance": ["aggressive"]
      },
      "banned_lexical_set": [
        "perfect",
        "flawless",
        "exactly like",
        "guaranteed results",
        "just like the photo",
        "identical"
      ]
    },
    "TP-06": {
      "name": "Autonomy-Respecting",
      "description": "Empowering tone for patients who value independence",
      "priority": 5,
      "trigger_drivers": {
        "autonomy_level": ["autonomous"],
        "decision_stage": ["ready"]
      },
      "always_used_for_sections": [11],
      "banned_lexical_set": [
        "you need to",
        "you must",
        "the only option",
        "I recommend",
        "you should"
      ]
    }
