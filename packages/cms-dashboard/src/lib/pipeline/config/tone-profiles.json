  "fallback_chains": {
    "TP-01": [],
    "TP-02": ["TP-01"],
    "TP-03": ["TP-01"],
    "TP-04": ["TP-02", "TP-01"],
    "TP-05": ["TP-03", "TP-01"],
    "TP-06": ["TP-01"]
